@model IEnumerable<Mob_version_RPZ.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h1>Contacts</h1>
<input type="button" value="Усі записи" onclick="location.href='@Url.Action("Index", "Contacts")'" />
<input type="button" value="Мають 'анч' " onclick="location.href='@Url.Action("Details", "Contacts")'" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                <a asp-action="Create">
                    <img src="~/img/add.png" class="edit_delete" />
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)<br />
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <img src="~/img/edit.png" class="edit_delete" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <img src="~/img/delete.png" class="edit_delete" style="margin-left:5px" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
